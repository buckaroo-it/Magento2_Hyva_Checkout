<?php
/** @var \Buckaroo\HyvaCheckout\Magewire\Payment\Method\Applepay $magewire */
/** @var Magento\Framework\Escaper $escaper */

$isClientSide = (bool) $magewire->getIntegrationMode();
?>
<form
    wire:id="checkout.payment.method.buckaroo_magento2_applepay"
    x-data="{
        config: $wire.get('config'),
        $wire: $wire,
        // expose your PHP flag here:
        isClientSide: <?= $isClientSide ? 'true' : 'false' ?>,
        initApplePay() {
            console.log(this.isClientSide
              ? 'Registering Apple Pay (Client-Side)'
              : 'Registering Apple Pay (Redirect)'
            );
            if (this.isClientSide) {
              Object.assign(this, buckaroo.applePay('<?= $magewire->getJsSdkUrl() ?>'));
              // now call the real register() from buckaroo.applePay
              this.register();
            }
        }
    }"
    x-init="initApplePay()"
    novalidate
>
    <?php if ($isClientSide): ?>
        <button type="button" class="apple-pay-button" @click="submit">
            <?= $escaper->escapeHtml(__('Place Order')) ?>
        </button>
    <?php else: ?>
        <button type="submit" class="btn btn-primary">
            <?= $escaper->escapeHtml(__('Place Order (Redirect)')) ?>
        </button>
    <?php endif; ?>
</form>
