<?php
/** @var \Buckaroo\HyvaCheckout\Magewire\Checkout\Payment\Method\Applepay $magewire */
/** @var Magento\Framework\Escaper $escaper */

$isClientSide = $magewire->getIntegrationMode();
?>
<form
    wire:id="checkout.payment.method.buckaroo_magento2_applepay"
    x-data="{
        config: $wire.get('config'),
        $wire: $wire,
        register() {
            <?php if ($isClientSide): ?>
            Object.assign(this, buckaroo.applePay('<?= $magewire->getJsSdkUrl() ?>'));
            this.register();
            <?php endif; ?>
        }
    }"
    x-init="register()"
    novalidate
>
    <?php if ($isClientSide): ?>
        <div>
            <button type="button" class="apple-pay-button" @click="submit">
                <?= $escaper->escapeHtml(__('Place Order')) ?>
            </button>
        </div>
    <?php else: ?>
        <button type="submit" class="btn btn-primary">
            <?= $escaper->escapeHtml(__('Place Order (Redirect)')) ?>
        </button>
    <?php endif; ?>
</form>
